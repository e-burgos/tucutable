{
  "name": "@e-burgos/tucutable",
  "description": "Tucutable Library",
  "version": "1.0.0",
  "main": "./index.js",
  "module": "./index.mjs",
  "types": "./index.d.ts",
  "style": "./index.css",
  "author": "Esteban Burgos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/e-burgos/tucutable"
  },
  "keywords": [
    "ui",
    "tucutable",
    "e-burgos",
    "tailwind",
    "components",
    "library",
    "react",
    "zustand"
  ],
  "homepage": "https://tucutable.netlify.app",
  "changelog": "CHANGELOG.md",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "style": "./index.css",
      "import": "./index.mjs",
      "require": "./index.js"
    },
    "./styles": "./index.css"
  },
  "files": [
    "**/*"
  ],
  "sideEffects": true,
  "scripts": {
    "storybook": "storybook dev --initial-path=/docs/documentation-introduction--documentation -p 6006",
    "build-storybook": "storybook build --output-dir ../../dist/ui/storybook-tucutable",
    "publish-storybook": "pnpm dlx chromatic --project-token --force-rebuild --exit-zero-on-changes --auto-accept-changes",
    "serve-storybook": "serve ../../dist/ui/storybook-tucutable -p 8080",
    "chromatic": "pnpm dlx chromatic --project-token --force-rebuild",
    "storybook-doctor": "pnpm dlx storybook doctor",
    "publish:lib": "cd ../../dist/ui/tucutable && pnpm npm publish --access public --no-git-checks",
    "install:lib": "cd ../../ui/tucutable && pnpm install",
    "pack:lib": "cd ../../ui/tucutable && pnpm npm pack"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tanstack/react-query": "^5.17.0",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/table-core": "^8.21.3",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "tailwindcss": "^4.1.10",
    "@tailwindcss/postcss": "^4.1.10",
    "postcss": "^8.5.6"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=4.0.0"
  }
}
